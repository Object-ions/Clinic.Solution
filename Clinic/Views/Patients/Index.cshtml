@{
  Layout = "_Layout";
}

@using Clinic.Models;
@model List<Clinic.Models.Patient>;

<h1>Patients</h1>

@if (@Model.Count == 0)
{
  <h3>No Patients have been added yet!</h3>
}
else
{
    <ul>
    @foreach (Doctor doctor in Model)
    {
    <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId })</li>
    }
    </ul>
}

<p>@Html.ActionLink("Add new doctor", "Create")</p>

<p>@Html.ActionLink("Main Page", "Index", "Home")</p>