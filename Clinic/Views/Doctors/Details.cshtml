@{
  Layout = "_Layout";
}

@using Clinic.Models
@model Clinic.Models.Doctor

<h2>Doctor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Title)</h3>
<h3>@Html.DisplayNameFor(model => model.Speciality): @Html.DisplayFor(model => model.Speciality)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Doctor has no patient yet.</p>
}
else
{
  <h4>Dr. @Html.DisplayNameFor(model => model.Name) patients:</h4>
  <ul>
  @foreach(DoctorPatient join in Model.JoinEntities)
  {
    <li>@join.Patient.Name</li>
  }
  </ul>
}
<p>@Html.ActionLink("Add a patient", "AddPatient", new { id = Model.DoctorId }) </p>
<p>@Html.ActionLink("Edit Dr's profile","Edit", new { id = Model.DoctorId })</p>
<p>@Html.ActionLink("Delete this profile", "Delete", new { id = Model.DoctorId})
<br />
<p>@Html.ActionLink("Back to list", "Index")</p>